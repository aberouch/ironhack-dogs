<section class="center-small-banner">
  <div class="center-title">
    Contactar con el centro de {{dog.name}}
  </div>
</section>

<section class="white-section padding56">
  <div class="container">

    <div class="column2 padding form-container">

      <form action="/dogs/{{dog.id}}/contact" method="post">
        <label for="email">Tu email</label>
        <input type="text" name="email" value="{{user.email}} ">
        <br>
        <label for="center-name">Para</label>
        <input type="text" name="center-name" value="{{dog.center.name}}" disabled>
        <label for="subject">Asunto</label>
        <input type="text" name="subject" value="Cita con {{dog.name}}" <br>

        <label for="message">Mensaje</label>
        <br>
        <textarea type="textarea" name="message" placeholder="Hola, me llamo {{user.name}}, y estaría interesado en conocer a {{dog.name}} el día..."></textarea>
        <br>
        <button type="submit">Enviar</button>
      </form>
    </div>
  </div>
</section>